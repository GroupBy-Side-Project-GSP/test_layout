<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/tite_login"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="18sp"
        android:fontFamily="@font/notosan_font"
        android:color="#000000"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ed_id"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="155dp"
        android:layout_marginTop="38dp"
        />

    <EditText
        android:id="@+id/ed_id"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#939393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tite_login"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="59dp"
        android:hint="아이디 입력"
        android:textSize="14sp"
        android:textColorHint="#939393"
        />
    <EditText
        android:id="@+id/ed_pw"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#939393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_id"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        android:hint="비밀번호 입력"
        android:textSize="14sp"
        android:textColorHint="#939393"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:text="로그인"
        android:fontFamily="@font/notosan_font"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_sigin"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sigin"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:text="이메일로 가입하기"
        android:fontFamily="@font/notosan_font"
        android:textColor="#939393"
        android:background="@drawable/button_style2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="254dp"

        />

    <TextView
        android:id="@+id/tv_find_id"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:textColor="#939393"
        android:text="아이디 찾기"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintBottom_toTopOf="@id/btn_sigin"
        app:layout_constraintEnd_toStartOf="@id/tv_find_pw"
        android:layout_marginStart="102dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="221dp"
        />

    <TextView
        android:id="@+id/tv_find_pw"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:textColor="#939393"
        android:text="비밀번호 찾기"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/tv_find_id"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintBottom_toTopOf="@id/btn_sigin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="221dp"
        android:layout_marginEnd="91dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_eye"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_baseline_remove_red_eye_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_id"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="322dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="20dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>