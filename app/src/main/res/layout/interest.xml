<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/title_profile"
        android:layout_width="87dp"
        android:layout_height="27dp"
        android:text="프로필 설정"
        android:textSize="18sp"
        android:fontFamily="@font/notosan_font"
        android:color="#000000"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="136dp"
        android:layout_marginTop="38dp"
        />

    <TextView
        android:id="@+id/tv_explan"
        android:layout_width="174dp"
        android:layout_height="18dp"
        android:fontFamily="@font/notosan_font"
        android:textColor="#939393"
        android:text="프로필과 회사 이름을 설정해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_profile"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="93dp"
        android:layout_marginTop="17dp"
        />

    <ImageButton
        android:id="@+id/ibtn_profimage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@id/tv_explan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="54dp"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="125dp"
        android:background="@drawable/button_style3"
        android:src="@drawable/ic_baseline_edit_24"
        />

    <EditText
        android:id="@+id/ed_p_offname"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:hint="기업명"
        android:textColorHint="#939393"
        app:layout_constraintTop_toBottomOf="@id/ibtn_profimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_p_next"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:text="다음"
        android:fontFamily="@font/notosan_font"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_p_offname"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="198dp"
        />








</androidx.constraintlayout.widget.ConstraintLayout>