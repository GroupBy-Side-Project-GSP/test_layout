<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/tite_sigin"
        android:layout_width="66dp"
        android:layout_height="27dp"
        android:text="회원가입"
        android:textSize="18sp"
        android:fontFamily="@font/notosan_font"
        android:color="#000000"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ed_s_email"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="147dp"
        android:layout_marginTop="38dp"
        />

    <EditText
        android:id="@+id/ed_s_email"
        android:layout_width="249dp"
        android:layout_height="36dp"
        android:backgroundTint="#939393"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tite_sigin"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        android:hint="이메일 입력"
        android:layout_marginEnd="91dp"
        android:textSize="20sp"
        android:textColorHint="#939393"
        />
<!--    app:layout_constraintEnd_toStartOf="@id/btn_cer"-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cer"
        android:layout_width="55dp"
        android:layout_height="36dp"
        android:text="인증"
        android:fontFamily="@font/notosan_font"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_style"
        app:layout_constraintStart_toEndOf="@id/ed_s_email"
        app:layout_constraintTop_toBottomOf="@id/tite_sigin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="51dp"
        />
    
    <EditText
        android:id="@+id/ed_s_id"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:backgroundTint="#939393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_cer"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        android:hint="아이디 입력"
        android:textSize="20sp"
        android:textColorHint="#939393"
        />


    <EditText
        android:id="@+id/ed_s_pw"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:backgroundTint="#939393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_s_id"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        android:hint="비밀번호 입력"
        android:textSize="20sp"
        android:textColorHint="#939393"
        />

    <EditText
        android:id="@+id/ed_s_rpw"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:backgroundTint="#939393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_s_pw"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        android:hint="비밀번호 재입력"
        android:textSize="20sp"
        android:textColorHint="#939393"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:text="다음"
        android:fontFamily="@font/notosan_font"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_s_rpw"
        app:layout_constraintBottom_toTopOf="@id/btn_s_login"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_s_login"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:text="로그인하기"
        android:fontFamily="@font/notosan_font"
        android:textColor="#939393"
        android:background="@drawable/button_style2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="142dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_s_eye1"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_baseline_remove_red_eye_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_s_id"
        app:layout_constraintBottom_toTopOf="@id/btn_s_eye2"
        android:layout_marginStart="322dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_s_eye2"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_baseline_remove_red_eye_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_s_eye1"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        android:layout_marginStart="322dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="20dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>